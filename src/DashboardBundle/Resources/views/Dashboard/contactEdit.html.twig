
{% extends "::dashboardLayout.html.twig" %}

{% set title = "Contacts" %}

{% block body %}


{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  		
{{ form_errors(form) }}
			

<div class="row">

	<div class="col-sm-offset-1 col-sm-4">
			
			 <div class="form-group">
			    {{ form_label(form.firstname) }}
			    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
			  </div>
			  
			 <div class="form-group">
			    {{ form_label(form.lastname) }}
			    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
			  </div>
			  
			 <div class="form-group">
			    {{ form_label(form.emailAddress) }}
			    {{ form_widget(form.emailAddress, {'attr': {'class': 'form-control'}}) }}
			  </div>
			  
	</div>
	
	
	<div class="col-sm-offset-1 col-sm-4">
			 <div class="form-group">
			    {{ form_label(form.phoneNumber) }}
			    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
			  </div>
			 <div class="form-group">
			    {{ form_label(form.address) }}
			    {{ form_widget(form.address, {'attr': {'class': 'form-control', 'rows': 5}}) }}
			  </div>

	</div>
	
	
	{{ form_rest(form) }}  
	
</div>

<br />


<div class="row">

	<div class="col-sm-offset-1 col-sm-9">
			
		
		<button type="submit" class="btn btn-block btn-info btn-lg" data-loading-text="Chargement...">
			Valider
		</button>
		
	</div>
	
</div>

	  {{ form_end(form) }}





{% endblock %}
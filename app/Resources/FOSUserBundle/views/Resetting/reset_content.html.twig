
<div class="row">
	<div class="col-sm-offset-4 col-sm-4">
	
		<h1>Forgot your password?</h1>
		

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset well">
    
	    {{ form_errors(form) }}
    <div class="form-group">
	    <label>New password</label>
	    {{ form_errors(form.plainPassword.first) }}
	    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
	  </div>
   	  <div class="form-group">
	    <label >Confirm new password</label>
	    {{ form_errors(form.plainPassword.second) }}
	    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
	  </div>
    <br />
	  <button type="submit" id="_submit" name="_submit"  class="btn-block btn btn-info btn-lg">Ok</button>
    {{ form_rest(form) }}
	  
</form>

</div>
</div>
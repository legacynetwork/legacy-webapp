	<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="well">

        {% if invalid_username is defined %}
        	  <div class="alert alert-danger">
		    	Unknown email
		    </div>
        {% endif %}
        
       <div class="form-group">
	    <label>Email adress</label>
	    <input class="form-control" type="email" id="username" name="username" required="required" />
	  </div>	
	  
	  <button type="submit" id="_submit" name="_submit"  class="btn-block btn btn-info btn-lg">Ok</button>
		</form>
	  
	  
	</div>
</div>




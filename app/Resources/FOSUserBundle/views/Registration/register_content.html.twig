
<div class="row">
	<div class="col-sm-offset-3 col-sm-6 text-center">
		<h1>Inscription</h1>
	</div>
</div>	

<br />
		
<div class="row">
	<div class="col-sm-offset-4 col-sm-4">
		
		{{ form_start(form, {'attr': {'class': 'well'}}) }}
  		
    	{{ form_errors(form) }}
			
   	  <div class="form-group">
	    <label>Username</label>
	    {{ form_errors(form.username) }}
	    {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>	
   	  <div class="form-group">
	    <label>Votre adresse email</label>
	    {{ form_errors(form.email) }}
	    {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>	
   	  <div class="form-group">
	    <label>Votre mot de passe</label>
	    {{ form_errors(form.plainPassword.first) }}
	    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>
   	  <div class="form-group">
	    <label >Confirmez le mot de passe</label>
	    {{ form_errors(form.plainPassword.second) }}
	    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>
   	
	   <button type="submit" value="" onclick="clickDisplay('submitRegister');" class="btn btn-block btn-success btn-block btn-lg">Confirmer l'inscription</button>
		{{ form_rest(form) }}
	  
	  {{ form_end(form) }}
	
			
			</form>
			
</div>
</div>
	

<script type="text/javascript">
					
function getParameterByName(name) {
    name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
    var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
        results = regex.exec(location.search);
    return results == null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
}

var emailAddress = getParameterByName('email'); 
document.getElementById('fos_user_registration_form_email').value = emailAddress;
if (emailAddress != null && emailAddress != '') {
	document.getElementById('fos_user_registration_form_plainPassword_first').focus();
}
else {
	document.getElementById('fos_user_registration_form_email').focus();
}


</script>
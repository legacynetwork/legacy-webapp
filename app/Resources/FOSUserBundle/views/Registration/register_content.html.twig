

<div class="row">
	<div class="col-sm-offset-3 col-sm-6 text-center">
		<h1>Register to Legacy</h1>
	</div>
</div>	

<br />
		
<div class="row">
	<div class="col-sm-offset-4 col-sm-4">
		
		{{ form_start(form, {'attr': {'class': 'well'}}) }}
  		
    	{{ form_errors(form) }}
		
   	  <div class="form-group">
	    <label>Email address</label>
	    {{ form_errors(form.email) }}
	    {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>	
   	  <div class="form-group">
	    <label>Password</label>
	    {{ form_errors(form.plainPassword.first) }}
	    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>
   	  <div class="form-group">
	    <label >Confirm password</label>
	    {{ form_errors(form.plainPassword.second) }}
	    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg'}}) }}
	  </div>
   	
	   <button type="submit" value="" onclick="clickDisplay('submitRegister');" class="btn btn-block btn-info btn-block btn-lg">Ok</button>
		{{ form_rest(form) }}
	  
	  {{ form_end(form) }}
	
			
			</form>
			
</div>
</div>
	